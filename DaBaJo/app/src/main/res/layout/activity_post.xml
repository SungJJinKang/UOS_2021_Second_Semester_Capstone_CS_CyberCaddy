<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="696dp"
        android:layout_gravity="top"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            tools:text="Title" />

        <TextView
            android:id="@+id/item_post_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="Contents" />

        <TextView
            android:id="@+id/item_post_createdAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="creatdAt" />

        <LinearLayout
            android:id="@+id/item_post_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_post_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/commentText"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:hint="댓글"
            android:minHeight="48dp"
            android:padding="5dp" />

        <Button
            android:id="@+id/commentSendButton"
            android:layout_width="76dp"
            android:layout_height="48dp"
            android:text="send" />
    </LinearLayout>

</androidx.cardview.widget.CardView>