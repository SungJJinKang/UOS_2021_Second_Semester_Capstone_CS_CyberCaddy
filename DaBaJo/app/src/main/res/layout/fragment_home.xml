<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    tools:context=".fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/bmdohyeon_ttf"
            android:gravity="center"
            android:text="다봐줘"
            android:textColor="#545454"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmdohyeon_ttf"
            android:gravity="center"
            android:text="모든 비대면 레슨을 하나로"
            android:textColor="#545454"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="105sp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35sp"
            android:gravity="center"
            android:text="광고 배너 위치"
            android:fontFamily="@font/bmdohyeon_ttf"
            android:textColor="#545454"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="210sp"
        android:layout_marginRight="20sp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_black"
            android:text="카테고리"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_black"
            android:gravity="right"
            android:text="@string/view_all"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="250sp"
        android:layout_marginRight="20sp"
        android:layout_weight="1"
        android:gravity="center" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button1"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/button_icon"
            android:drawableTop="@drawable/ic_dashicons_sport"
            android:fontFamily="@font/roboto_black"
            android:paddingTop="11dp"
            android:text="스포츠"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button2"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_icon"
            android:drawableTop="@drawable/ic_dashicons_art"
            android:fontFamily="@font/roboto_black"
            android:paddingTop="10dp"
            android:text="예체능"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button3"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_icon"
            android:drawableTop="@drawable/ic_dashicons_health"
            android:fontFamily="@font/roboto_black"
            android:paddingTop="15dp"
            android:text="헬스"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button4"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/button_icon"
            android:drawableTop="@drawable/ic_dashicons_edu"
            android:fontFamily="@font/roboto_black"
            android:paddingTop="15dp"
            android:text="교육"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="380sp"
        android:layout_marginRight="20sp"
        android:layout_weight="1"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="지금 뜨고 있는 튜터"
            android:fontFamily="@font/roboto_black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="420sp"
        android:layout_marginRight="20sp"
        android:layout_weight="1"
        android:gravity="center"/>

</FrameLayout>