<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="#FDFDFD"
            app:srcCompat="@drawable/ic_navigate_before_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_weight="3"
            android:fontFamily="@font/roboto_black"
            android:text="             스포츠"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonGolf"
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:layout_marginRight="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_icon"
                android:drawableTop="@drawable/ic_golf_course_black_24dp"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="15dp"
                android:text="골프"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonTennis"
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_icon"
                android:drawableTop="@drawable/ic_sports_tennis_black_24dp"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="15dp"
                android:text="테니스"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSoccer"
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:layout_marginLeft="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_icon"
                android:drawableTop="@drawable/ic_sports_soccer_black_24dp"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="15dp"
                android:text="축구"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:paddingTop="30dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonBasketball"
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:layout_marginRight="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_icon"
                android:drawableTop="@drawable/ic_sports_basketball_black_24dp"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="15dp"
                android:text="농구"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonBaseball"
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_icon"
                android:drawableTop="@drawable/ic_sports_baseball_black_24dp"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="15dp"
                android:text="야구"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSnowboarding"
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:layout_marginLeft="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_icon"
                android:drawableTop="@drawable/ic_snowboarding_black_24dp"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="15dp"
                android:text="스노보딩"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>