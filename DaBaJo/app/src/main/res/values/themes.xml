<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DaBaJo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#FB5943</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:titleMarginTop">-3dp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:titleMarginTop">-3dp</item>
    </style>
    <!-- 액션바 없을 때 -->
    <style name="AppThemeNo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#FB5943</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">#FB5943</item>
    </style>
<style name="SplashActivityTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_image</item>
</style>
<style name="ShapeAppearance.App.CircleImageView" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">50%</item>
</style>
<style name="CustomRadioButton" parent="Theme.AppCompat.Light">
    <item name="colorAccent">#FB5943</item>
</style>

<style name="checkBoxStyle" parent="Base.Theme.AppCompat">
    <item name="colorAccent">#FB5943</item>
    <item name="android:textColorSecondary">#545454</item>
</style>
